---
import Layout from "../layouts/Layout.astro"
---

<Layout title="404: Not found">
	<main>
		<section class="error-page">
			<div class="container">
			  <h1>404</h1>
			  <p class="error-page__message">Oops! The page you're looking for does not exist.</p>
			  <a href="/" class="error-page__link">Go back to the home page</a>
			</div>
		</section>
	</main>
</Layout>

<style>
    .error-page {
      text-align: center;
      padding: 50px;
    }

    .error-page__message {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .error-page__link {
      font-size: 18px;
      color: #007bff;
      text-decoration: none;
    }

    .error-page__link:hover {
      text-decoration: underline;
    }
</style>
